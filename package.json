{
  "name": "portfolio-2025",
  "version": "1.0.0",
  "description": "Portfolio 2025",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "concurrently -k \"cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack\" \"tsx watch ./src/payload.config.ts\"",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@payloadcms/db-sqlite": "3.48.0",
    "@payloadcms/next": "3.48.0",
    "@payloadcms/payload-cloud": "3.48.0",
    "@payloadcms/richtext-lexical": "3.48.0",
    "@payloadcms/ui": "3.48.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@react-three/drei": "^10.5.2",
    "@react-three/fiber": "^9.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "gsap": "^3.13.0",
    "lucide-react": "^0.525.0",
    "motion": "^12.23.6",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "payload": "3.48.0",
    "react": "19.1.0",
    "react-responsive": "^10.0.1",
    "react-type-animation": "^3.2.0",
    "sharp": "0.34.2",
    "tailwind-merge": "^3.3.1",
    "three": "^0.178.0",
    "three-stdlib": "^2.36.0"
  },
  "devDependencies": {
    "@playwright/test": "1.50.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "@types/three": "^0.178.1",
    "@vitejs/plugin-react": "4.5.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.3.0",
    "jsdom": "26.1.0",
    "leva": "^0.10.0",
    "playwright": "1.50.0",
    "playwright-core": "1.50.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.5",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
